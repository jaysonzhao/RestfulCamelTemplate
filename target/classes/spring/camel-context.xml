            <log id="route-log" message=">>> ${body}"/>
            <setExchangePattern id="_setExchangePattern3" pattern="InOnly"/>
            <to id="_to1" uri="amqp:queue:q.hzinte.logq"/>
            <transform id="_transform1">
                <constant>Processed the data</constant>
            </transform>
            <to id="_to3" uri="mock:incomingjson"/>
        </route>
        <route id="_errorroute" streamCache="true">
            <from id="_fromIR1" uri="direct:error"/>
            <setExchangePattern id="_setExchangePatternerror" pattern="InOnly"/>
            <to id="_toerrorq" uri="amqp:queue:q.hzinte.errorq"/>
        </route>
    </camelContext>
</beans>
